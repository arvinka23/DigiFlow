@page
@model DigitalisierungsManager.Pages.Identity.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registrieren - DigiFlow</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        * { box-sizing: border-box; margin: 0; }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            font-feature-settings: "cv02", "cv03", "cv04", "cv11";
            background: #0a0a0a;
            -webkit-font-smoothing: antialiased;
            font-size: 14px;
            line-height: 1.6;
        }

        .register-container {
            width: 100%;
            max-width: 400px;
            padding: 24px;
        }

        .register-card {
            background: #1c1c1c;
            border: 1px solid #2a2a2a;
            border-radius: 16px;
            padding: 40px 32px;
        }

        .brand-area { text-align: center; margin-bottom: 32px; }

        .brand-logo {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: #3b82f6;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            color: #fff;
            margin-bottom: 12px;
        }

        .brand-name {
            font-size: 20px;
            font-weight: 700;
            color: #ededed;
            display: block;
            letter-spacing: -0.02em;
        }

        .brand-sub { color: #6b6b6b; font-size: 13px; margin-top: 4px; }

        .alert-danger {
            background: rgba(239, 68, 68, 0.08);
            border: 1px solid rgba(239, 68, 68, 0.15);
            color: #fca5a5;
            border-radius: 10px;
            font-size: 13px;
            padding: 10px 14px;
        }

        .alert-danger ul { margin-bottom: 0; padding-left: 18px; }

        .form-label { color: #ededed; font-size: 14px; font-weight: 500; margin-bottom: 6px; }

        .input-wrap { position: relative; }

        .input-wrap .form-control {
            background: #141414;
            border: 1px solid #2a2a2a;
            color: #ededed;
            border-radius: 8px;
            padding: 9px 14px 9px 38px;
            font-size: 13px;
            transition: border-color 0.15s, box-shadow 0.15s;
        }

        .input-wrap .form-control:focus {
            background: #141414;
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.15);
            color: #ededed;
        }

        .input-wrap .form-control::placeholder { color: #6b6b6b; }

        .input-wrap .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6b6b6b;
            font-size: 14px;
        }

        .btn-register {
            width: 100%;
            padding: 10px;
            font-size: 13px;
            font-weight: 600;
            background: #3b82f6;
            border: none;
            border-radius: 8px;
            color: #fff;
            transition: background 0.15s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            cursor: pointer;
        }

        .btn-register:hover { background: #60a5fa; }

        hr { border-color: #2a2a2a; margin: 24px 0; }

        .link-text { text-align: center; color: #6b6b6b; font-size: 13px; }
        .link-text a { color: #3b82f6; text-decoration: none; font-weight: 500; }
        .link-text a:hover { color: #60a5fa; }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="brand-area">
                <div class="brand-logo">
                    <i class="bi bi-lightning-charge-fill"></i>
                </div>
                <span class="brand-name">DigiFlow</span>
                <p class="brand-sub">Neues Konto erstellen</p>
            </div>

            @if (Model.Errors.Any())
            {
                <div class="alert alert-danger">
                    <ul class="mb-0">
                        @foreach (var error in Model.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label" for="anzeigename">Name</label>
                    <div class="input-wrap">
                        <i class="bi bi-person input-icon"></i>
                        <input type="text" class="form-control" id="anzeigename" name="Anzeigename"
                               value="@Model.Anzeigename" required autofocus placeholder="Max Mustermann" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">E-Mail</label>
                    <div class="input-wrap">
                        <i class="bi bi-envelope input-icon"></i>
                        <input type="email" class="form-control" id="email" name="Email"
                               value="@Model.Email" required placeholder="name@@firma.ch" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Passwort</label>
                    <div class="input-wrap">
                        <i class="bi bi-lock input-icon"></i>
                        <input type="password" class="form-control" id="password" name="Password" required
                               placeholder="Mind. 6 Zeichen, 1 Grossbuchstabe, 1 Zahl" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="confirmPassword">Passwort bestaetigen</label>
                    <div class="input-wrap">
                        <i class="bi bi-shield-lock input-icon"></i>
                        <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required
                               placeholder="Passwort wiederholen" />
                    </div>
                </div>
                <button type="submit" class="btn-register">
                    <i class="bi bi-person-plus"></i> Registrieren
                </button>
            </form>

            <hr />
            <p class="link-text mb-0">
                Bereits ein Konto? <a href="/Identity/Login">Anmelden</a>
            </p>
        </div>
    </div>
</body>
</html>
